{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "allowSyntheticDefaultImports": true,
  "compilerOptions": {
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@utils/*": ["src/utils/*"],
      "@constants/*": ["src/constants/*"],
      "@navigators/*": ["src/navigators/*"],
      "@assets/*": ["src/assets/*"],
      "@redux/*": ["src/redux/*"],
    }
  },
}
